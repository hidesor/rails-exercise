<div class="panel panel-success">
    <div class="panel-body">
        <%= form_for([:admin, @word]) do |f| %>

            <div class='form-group'>
                <label class='col-sm-2 control-label'>文字</label>
                <div class='col-sm-10'>
                    <%= f.text_field :name, class:'form-control' %>
                </div>
                <div class='clear'></div>
            </div>

            <div class='form-group'>
                <label class='col-sm-2 control-label'>內容</label>
                <div class='col-sm-10'>
                    <%= f.text_field :content, class:'form-control' %>
                </div>
                <div class='clear'></div>
            </div>

            <div class='form-group'>
                <div class="form-actions pull-right">
                    <div class='col-sm-12'>
                        <%= link_to '返回', admin_words_path, class: "btn btn-primary" %>
                        <%= f.submit "確定" , class: "btn btn-primary" %>
                    </div>
                </div>
            </div>

        <% end %>
    </div>
</div>
