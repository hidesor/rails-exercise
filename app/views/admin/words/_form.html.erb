<div class="panel panel-success">
    <div class="panel-body">
        <%= form_for([:admin, @word]) do |f| %>

            <div class="form-inputs">
                <div class="form-group">
                    <div class="col-sm-2">
                        <label>文字</label>
                    </div>
                    <div class="col-sm-10">
                        <%= f.text_field :name %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-2">
                        <label>內容</label>
                    </div>
                    <div class="col-sm-10">
                      <%= f.text_field :content %>
                    </div>
                </div>

            <div class="form-actions pull-right">
                <%= link_to '返回', admin_words_path, class: "btn btn-primary" %>
                <%= f.submit "確定" , class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>
