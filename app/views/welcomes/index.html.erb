<%= stylesheet_link_tag 'welcome' %>

<div class="jumbotron jumbotron_top text-center background-img">
    <h2 class="to_white_text">Ryan's Learning Website</h2>
    <p class="to_white_text">The first step is always the hardest,If at first you donâ€™t succeed, try, try again</p>
</div>

<div class="panel panel-default">
    <div class="panel-body">
        <!-- this week -->
        <h2>
            <a>Weekly words</a>
        </h2>
        <p class="text-info">
            Weekly words are organized as follows,Click the button to read more.
        </p>
        <hr>
        <button id="start_this_week" type="button" class="set_week_button">Start</button>
        <button id="reset_this_week" type="button" class="set_week_button">Restart</button>
        <div class="row">
        <% @this_week_words.each do | word |%>
            <div class="col-md-2 col-sm-3 col-xs-4 col-xs-6">
                <h2>
                    <% btn_name = word.name.to_s %>
                    <button id="<%= word.id %>" type="button" class="week_button word_btn" >
                        <%= btn_name %>
                    </button>
                    <a class="is_know_week"><i class='fa fa-question' aria-hidden='true'></i></a>
                </h2>
            </div>
        <% end %>
        </div>

        <!-- before word -->
        <h2>
            <a>Before words</a>
        </h2>
        <p class="text-info">
            Before words are organized as follows,Click the button to read more.
        </p>
        <hr>
        <button id="start_this_before" type="button" class="set_before_button">Start</button>
        <button id="reset_this_before" type="button" class="set_before_button">Restart</button>
        <div class="row">
        <% @before_words.each do | word |%>
            <div class="col-md-2 col-sm-3 col-xs-4 col-xs-6">
                <h2>
                    <% btn_name = word.name.to_s %>
                    <button id="<%= word.id %>" type="button" class="btn before_button word_btn" >
                        <%= btn_name %>
                    </button>
                    <a class="is_know_before"><i class='fa fa-question' aria-hidden='true'></i></a>
                </h2>
            </div>
        <% end %>
        </div>

    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
